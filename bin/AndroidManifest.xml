<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionCode="1" android:versionName="1.0" package="io.salina.android.community">

    <uses-sdk android:minSdkVersion="13" android:targetSdkVersion="17"/>

    <uses-permission android:name="io.salina.android.community.permission.C2D_MESSAGE"/>

    <permission android:name="io.salina.android.community.permission.C2D_MESSAGE" android:protectionLevel="signature"/>

    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application android:allowBackup="true" android:icon="@drawable/ic_salina_logo2" android:label="@string/app_name" android:theme="@style/Sherlock.__Theme.Light">
        <activity android:label="@string/app_name" android:name="io.salina.android.community.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <receiver android:name="com.google.android.gcm.GCMBroadcastReceiver" android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE"/>
                <action android:name="com.google.android.c2dm.intent.REGISTRATION"/>

                <category android:name="io.salina.android.community"/>
            </intent-filter>
        </receiver>

        <service android:name="io.salina.android.community.GCMIntentService"/>

        <activity android:label="@string/title_activity_my_apps" android:name="io.salina.android.community.MyAppsActivity">
        </activity>
        <activity android:label="@string/app_name" android:name="io.salina.android.community.IntroActivity" android:screenOrientation="portrait" android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen">
            
        </activity>
        <activity android:name="org.salina.android.widget.FeedbackDialogActivity" android:theme="@android:style/Theme.Dialog"/>

        <service android:name="io.salina.android.widget.FeedbackLabelService">
        </service>

        <activity android:label="@string/title_activity_web_view" android:name="io.salina.android.community.WebViewActivity" android:theme="@android:style/Theme.Holo.Light.NoActionBar">
        </activity>
        <activity android:label="@string/app_name" android:name="io.salina.android.widget.FeedbackActivity" android:theme="@style/Theme.Sherlock.Light">
        </activity>
        <activity android:label="@string/title_activity_sign_up" android:name="io.salina.android.community.SignUpActivity">
        
        </activity>
        <activity android:name="io.salina.android.www.ContentsActivity"/>
    </application>

</manifest>
