<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:minWidth="300dp"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:layout_gravity="center"
    android:orientation="vertical" >
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@+id/dialog_login_etId"
        android:text="Salina Account ID : "/>
	<EditText
	    android:id="@id/dialog_login_etId"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:typeface="monospace"
	    android:hint="Enter Login ID"
	    />
	
	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:labelFor="@+id/dialog_login_etPassword"
        android:text="Password : "/>
	
	<EditText
	    android:id="@id/dialog_login_etPassword"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:inputType="textPassword"
	    android:typeface="normal"
	    android:hint="Enter password"/>
	
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dp">
	    <Button
	        android:id="@+id/dialog_login_btSignUp"
	        android:layout_height="match_parent"
	        android:layout_width="wrap_content"
	        android:layout_weight="1"
	        android:text="Sign up"/>
	    <Button
	        android:id="@+id/dialog_login_btLogin"
	        android:layout_height="match_parent"
	        android:layout_width="wrap_content"
	        android:layout_weight="1"
	        android:text="Login"/>
    </LinearLayout>
    
    <CheckBox 
	    android:id="@+id/dialog_login_cbRemember"
	    android:layout_marginTop="10dp"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="Remeber me"
	    android:checked="true"/>
    
	<TextView
	    android:id="@+id/dialog_login_tvForgot"
	    android:layout_marginTop="15dp"
	    android:layout_marginBottom="15dp"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="right"
	    android:textColor="#000088"
	    android:text="@string/forgot_account_info"/>
	    
	
	    
	
	
		
	    
</LinearLayout>